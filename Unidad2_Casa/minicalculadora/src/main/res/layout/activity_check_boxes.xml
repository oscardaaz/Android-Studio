<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cbMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/cbMaterialToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_atras"
        />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityCheckBoxes">

        <CheckBox
            android:id="@+id/cbRestar"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="Restar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbSumar" />

        <CheckBox
            android:id="@+id/cbSumar"
            android:layout_width="126dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:text="Sumar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilCbNum2" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCbNum2"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:hint="Numero 2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tilCbNum1">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:layout_editor_absoluteX="14dp"
                tools:layout_editor_absoluteY="181dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvCbResultado"
            android:layout_width="88dp"
            android:layout_height="105dp"
            android:layout_marginTop="36dp"
            android:text="Resultado"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCbCalcular" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCbNum1"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginTop="96dp"
            android:hint="Numero 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textAlignment="textEnd" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnCbCalcular"
            android:layout_width="126dp"
            android:layout_height="63dp"
            android:layout_marginTop="20dp"
            android:text="Calcular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbRestar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>