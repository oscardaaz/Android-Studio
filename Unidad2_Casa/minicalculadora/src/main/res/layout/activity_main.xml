<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMain">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckBoxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="224dp"
        android:text="CheckBoxes"
        app:icon="@drawable/ic_checkbox"
        android:backgroundTint="@color/black"
        app:iconTint="#F80000"
        android:textColor="#F80000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRadioButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Radio Buttons"
        app:icon="@drawable/ic_radiobutton"
        app:iconGravity="textEnd"
        app:iconPadding="24dp"
        android:backgroundTint="@color/black"
        app:iconTint="#F80000"
        app:iconSize="20dp"
        android:textColor="#F80000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCheckBoxes" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSpinner"
        android:layout_width="133dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:text="Spinner"
        app:icon="@drawable/ic_spinner"
        android:backgroundTint="@color/black"
        app:iconTint="#F80000"
        android:textColor="#F80000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRadioButtons" />

</androidx.constraintlayout.widget.ConstraintLayout>